
@using WebApp.ViewModels.Bodies;
@model BodyUpdateRequest


<h1>Cập nhật Body</h1>
<hr />
<div class="row">
    <div class="col-md-10 mx-auto">
        <form asp-action="Edit">

            @if (ViewBag.isShow)
            {
                <div class="alert alert-@(ViewBag.isSuccess?"success":"danger")" role="alert">
                    @ViewBag.message
                </div>
            }
                    <input asp-for="@Model.Id" type="hidden" class="form-control" />

            <div class="form-group row">
                <label class="control-label col-3"><strong>Tên body</strong></label>
                <div class="col-9">
                    <input asp-for="@Model.Name" class="form-control" required />
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-3"><strong>Mô tả</strong></label>
                <div class="col-9">
                    <input asp-for="@Model.Description" class="form-control" required />
                </div>
            </div>

            <div class="form-group">
                <div class="w-100 text-center">
                    <input type="submit" value="Cập nhật" class="btn btn-primary w-50" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại danh sách</a>
</div> 